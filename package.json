{
  "name": "rednote-mcp",
  "version": "1.0.0",
  "description": "MCP server for searching and retrieving content from Xiaohongshu (Red Note) platform.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:worker": "tsc && wrangler deploy --dry-run",
    "start": "node dist/index.js",
    "start:scraping-service": "node dist/scraping-service.js",
    "dev": "tsc -w",
    "dev:worker": "wrangler dev",
    "deploy": "tsc && wrangler deploy",
    "preview": "wrangler dev"
  },
  "keywords": [
    "mcp",
    "xiaohongshu",
    "redbook"
  ],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.7.1",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251014.0",
    "@modelcontextprotocol/sdk": "^1.20.2",
    "@types/node": "^22.14.1",
    "playwright": "^1.52.0",
    "typescript": "^5.8.3",
    "wrangler": "^4.45.0",
    "zod": "^3.24.3"
  }
}
